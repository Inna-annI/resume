{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<main class="container">
	<div class="row">
		<div class="col-12">
			<div class="py-4 px-0">

				{{> breadcrumb}}
				<div class="col mt-5">
				{{#with newsData}}
					<div class="col-12">
						<div class="card">
							<img class="card-img" src="{{photo}}">
						</div>
					</div>
				</div>

				<div class="col mt-5">
					{{#with head}}
						<h1 class="text-center">{{heading}}</h1>
						<p>{{description}}</p>
					{{/with}}
				</div>

				<div class="col my-5">
					{{#each body}}
					{{#with this}}
					<h4>{{title}}</h4>
					<p>{{text}}</p>
					{{/with}}
					{{/each}}
				</div>
				{{/with}}

				<hr>

				<div class="col mt-5">
					{{#with newsOtherBlock}}					
						{{> shoppost}}
					{{/with}}
				</div>

				<hr>
			
			<div class="col my-5">
				{{> shopaction}}
			</div>
			</div>
		</div>
	</div>
</main>


{{!--
Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
Адже наш layout/default.hbs має вже структуру HTML
--}}