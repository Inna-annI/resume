{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<br>
<div class="card">
    <div class="card-body">
        {{#with heading}}
            {{#with main}}
            <div class="card">
                    <div class="card-body">            
                        <h1>{{title}}</h1>
                        <br>
                        <p>{{text}}</p>
                        {{#with button_text}}
                            <button class="btn btn-primary">
                                {{solid}}
                            </button>
                            <button class="btn btn-outline-primary">
                                {{outline}}
                            </button>
                        {{/with}}            
                    </div>
                </div>
            {{/with}}
            <br>
            {{#with second}}
                <div class="card">
                    <div class="card-body">
                        <h2>{{title}}</h2>
                        <br>
                        <p>{{text}}</p>
                        {{#with button_text}}
                            <button class="btn btn-secondary">
                                {{solid}}
                            </button>
                            <button class="btn btn-outline-secondary">
                                {{outline}}
                            </button>
                        {{/with}}
                    </div>
                </div>
            {{/with}}
            <br>
            {{#with subblock}}
                <div class="card">
                    <div class="card-body">
                        <h3>{{title}}</h3>
                        <br>
                        <p>{{text}}</p>
                        {{#with button_text}}
                            <button class="btn btn-dark">
                                {{solid}}
                            </button>
                            <button class="btn btn-outline-dark">
                                {{outline}}
                            </button>
                        {{/with}}
                    </div>
                </div>
            {{/with}}
        {{/with}}
    </div>
</div>
<br>
<div class="card">
    <div class="card-body">
       {{#with nested_display}}
            <div class="display-1">
                {{title}}
            </div> 
            <br>
            <div class="card">
                <div class="card-body">
                    {{#with children_display}}
                        <div class="display-4">
                            {{title}}
                        </div>
                        <br>
                        <p>{{text}}</p>
                        {{#with button}}
                            <button class="btn btn-outline-warning">{{text}}</button>
                        {{/with}}
                    {{/with}}
                </div>
            </div>
            <br>
            <h6>{{header_text}}</h6>
            <br>
            {{#with button}}
                <button class="btn btn-info">{{text}}</button>
            {{/with}}
       {{/with}}   
    </div>
</div>
<br>
<div class="card">
    <div class="card-body">
        {{#with paragraph}}
            <span class="text-uppercase">{{title}}</span>
            <br>
            <p>{{text}}</p>
            {{#with button}}
                <button class="btn btn-link">
                    {{> link text=text href=url noLine=true }}
                </button>
            {{/with}}
            <div class="card">
                <div class="card-body">
                    <ul>
                        {{#each list_name}}
                        <li>
                           {{> link text=text href=url noLine=true }} 
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        {{/with}}
    </div>
</div>
<br>

