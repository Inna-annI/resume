{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="m-5">
    {{#with program}}
            <section class="my-5">
            {{#with excursion}}
            <div><h1>{{name}}</h1></div>
            {{#with location}}
            <b>{{city}}</b>
            <b>{{country}}</b>
            {{/with}}
            <em>{{date}}</em> 
        </section>

        <hr>

        <div>
            {{#each program}}
            <h2>{{name}}</h2>
            <div class="my-3">
            {{type}}: {{duration}}
            {{#if duration}} (hour) {{/if}}
            </div> 
            <br>
                {{#with details}}
                {{#with venue}}
                {{name}}
                <address>
                    {{#with location}}
                    {{address}}
                    {{city}}
                    {{country}}
                    {{/with}}
                </address>
                {{/with}}
                {{> title data="Performers" }}
                <ul>
                    {{#each performers}}
                    <li>
                        <p>
                        {{this.name}}
                        <br>
                        {{this.type}}
                        </p>
                    </li>
                    {{/each}}
                </ul>
                <br>
                {{/with}}
                <br>
                {{#with details}}
                    {{#with museum}}
                    <b>{{name}}</b>
                    <address>
                        {{#with location}}
                        {{address}}
                        <br>
                        {{city}}
                        <br>
                        {{country}}
                        {{/with}}
                    </address>
                    <br>

                {{> title data="Exhibits" }}
                    <ul>
                        {{#each exhibits}}
                        <li>
                            <p>
                                {{name}} {{artist}}
                                <br>
                                {{description}}
                                <br>
                                {{#if audio_guide}}Audio guide{{/if}}
                            </p>
                        </li>
                        {{/each}}
                    </ul>
                
                {{/with}}
                {{#with guide}}
                {{name}}
                <br>
                {{language}}
                <br>
                {{rating}}
                {{/with}}
                {{/with}}
            {{/each}}
        </div>
        
        {{/with}}
    {{/with}}
</div>

