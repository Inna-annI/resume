{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="m-5">
   <h1>{{name}}</h1>
   <p>{{description}}</p>
   {{#with history}}
   <em>{{year}}</em>
   <br>
   {{founder}}
   {{/with}}
   {{> title data="Types" big=false }}
   <ul>
        {{#each types}}
        <li>
            {{this}}
        </li>
        {{/each}}
   </ul>
   {{> title data="Syntax" big=false }}
   <ul>
    {{#with syntax}}
    <ul><li>{{variables}}</li></ul>
    <ul><li>{{functions}}</li> </ul>
    <ul><li>{{conditionals}}</li></ul>
    <ul><li>{{loops}}</li></ul>
    <ul><li>{{classes}}</li></ul>
    {{/with}}
   </ul>
   {{> title data="Features" big=false }}
   <ul>
        {{#each features}}
        <li>
            {{this}}
        </li>
        {{/each}}
   </ul>
   {{> title data="Libraries" big=false }}
   <ul>
        {{#each libraries}}
        <li>
            {{this}}
        </li>
        {{/each}}
   </ul>
   {{> title data="Tools" big=false }}
   <ul>
        {{#each tools}}
        <li>
            {{this}}
        </li>
        {{/each}}
   </ul>
   {{> title data="Community" big=false }}
   <ul>
        {{#each community}}
        <p>
        <li>
            {{this.name}}
            <br>
            {{this.type}}
        </li>
        </p>
        {{/each}}
   </ul>
</div>

