{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with name}}
        {{> title data="Facebook" big=true }}
    {{/with}}

    {{#each users}}
        <section>
            {{#if id}} ID {{id}} {{/if}}
            <br>
            <b>{{name}}</b>
            <br>
            {{#if gender}} {{gender}} {{age}} {{/if}}
            <hr>
            <hr>
                <ul>
                    {{#each friends}}
                        <li>
                           {{#if id}} ID {{id}} {{/if}}
                            <br>
                            <b>{{name}}</b>
                            <br>
                            {{#if gender}} {{gender}} {{age}} {{/if}}
                            <br>
                            {{#each mutual_friends}}
                            <li>
                                {{#if id}} ID {{id}} {{/if}}
                                <br>
                                <b>{{name}}</b>
                                <br>
                                {{#if gender}} {{gender}} {{age}} {{/if}}
                            </li>
                            {{/each}}
                            <br>
                            <ul>
                            {{#each groups}}
                                <li>
                                    {{#if id}} ID {{id}} {{/if}}
                                    <br>
                                    <b>{{name}}</b>
                                    <br>
                                    <p>{{description}}</p> 
                                    <br>
                                    {{#each members}}
                                        <li>
                                            {{#if id}} ID {{id}} {{/if}}
                                            <br>
                                            <b>{{name}}</b>
                                            <br>
                                            {{#if gender}} {{gender}} {{age}} {{/if}}
                                        </li>
                                    {{/each}}
                                </li>
                            {{/each}}
                            </ul>
                        </li>                        
                        {{/each}}
                        <br>
                        <ul>
                        {{#each groups}}
                        <li>
                            {{#if id}} ID {{id}} {{/if}}
                            <br>
                            <b>{{name}}</b>
                            <br>
                            <p>{{description}}</p> 
                            <br>
                            {{#each members}}
                            <li>
                                {{#if id}} ID {{id}} {{/if}}
                                <br>
                                <b>{{name}}</b>
                                <br>
                                {{#if gender}} {{gender}} {{age}} {{/if}}
                            </li>
                            {{/each}}
                        </li>
                        {{/each}}
                    </ul>
                </ul>
        </section>
    {{/each}}    
</div>

