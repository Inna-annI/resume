{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<main class="container">
	<div class="row">
		{{#with formBlock}}
		<div class="col-8">
			<div class="my-5 ms-3">
				
				<h1>{{header}}</h1>
				{{#with rating}}
				<p>{{title}}:{{value}}</p>
				{{/with}}
				<div>
					{{#with actionBlock}}
					<div class="mb-5">
					<ul class="nav nav-tabs">
						{{#each tabs}}
						<li class="nav-item">
							<a href="#" class="nav-link {{#if isActive}}active{{/if}}" aria-current="page">{{text}}</a>
						</li>
						{{/each}}
					</ul>
					</div>
					<hr>
					<div class="my-5">
						{{#with report}}
						<div class="card">
							<div class="p-3">
								<p>{{title}}</p>
								{{#with button}}
								<a href="{{link}}" class="btn btn-secondary">{{text}}</a>
								{{/with}}
							</div>
						</div>
						{{/with}}
					</div>
					{{/with}}
				</div>
				<hr>
				<div class="my-5">
				{{#with feedbackBlock}}
					<h2>{{title}}</h2>

					<div class="mt-5">
					<div class="row">
					{{#each buttons}}				
						{{#if isWarning}}
							<div class="col">
								<a href="{{link}}" class="btn btn-warning">{{text}}</a>
							</div>
						{{/if}}

						{{#if isSuccess}}
							<div class="col">
								<a href="{{link}}" class="btn btn-success">{{text}}</a>
							</div>
						{{/if}}
					
						{{#if isDanger}}
							<div class="col">
								<a href="{{link}}" class="btn btn-danger">{{text}}</a>
							</div>
						{{/if}}
					{{/each}}
					</div>
					</div>

				{{/with}}
				</div>

			</div>
		</div>

		<div class="col-4">
			<div class="my-5">
				{{#with goodsInfo}}
				<div class="card">
					<div class="m-3">
						<div class="col-2">
							<img src="{{photo}}" class="cart-img-top">
						</div>
						<div class="mt-2">
							<h5>{{name}}</h5>
						</div>
					</div>
				</div>
				<div class="my-3">
					<div class="card">
						<div class="m-3">
							<h5>{{price}}</h5>
							{{#if inMarket}}Є в наявності{{/if}}
							{{#each buttons}}
							{{#if isPrimary}}
							<div class="mt-2">
								<a href="{{link}}" class="btn btn-primary">{{text}}</a>
							</div>
							{{/if}}
							{{#if isSecondary}}
							<div class="mt-2">
								<a href="{{link}}" class="btn btn-secondary">{{text}}</a>
							</div>
							{{/if}}
							{{/each}}
						</div>
					</div>
				</div>
				<div class="card">
					<div class="m-3">
						{{#with seller}}
						<div>
							{{title}}: 
							<b>{{value}}</b>
						</div>
						{{/with}}
					</div>
				</div>
			</div>
			{{/with}}
		</div>

		{{/with}}
	</div>

	<div class="row">
		<div class="col">
			<hr>

			<div class="my-5">
				<div class="card">
					<div class="p-3">
						{{#each reviewList}}
						<div class="my-5">
							{{> reviewItem}}
						</div>
						{{/each}}
					</div>
				</div>
			</div>

			<hr>

			<div class="my-5">
			{{> shopaction}}
			</div>

			<hr>
		</div>
	</div>
</main>


