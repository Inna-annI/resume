{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<main class="container">
	<div class="row">
		<div class="col-12">
			<div class="my-5">
				{{> breadcrumb}}
			</div>
			<div class="ms-3 mb-3">
				<h1>{{header}}</h1>
			</div>

			<div class="col-9">
				{{#each sortBlock}}
					<div class="m-2">
				<select class="form-select" aria-label="Default select example">
					<option selected>{{placeholder}}</option>
					{{#each options}}
					<option value="{{value}}">{{text}}</option>
					{{/each}}
					</select>
					</div>
				{{/each}}
			</div>
		</div>
	</div>


	<div class="row">
		<div class="col-4">
			<div class="ms-2">
				{{#with filterBlock}}
				<div class="card">
					<div class="p-2">
						{{#with sellers}}
							<p>{{title}}</p>
						{{/with}}
						
					</div>
				</div>
				{{/with}}
			</div>
		</div>

		<div class="col-8">

		</div>
	</div>
</main>


