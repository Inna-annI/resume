{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<main class="container">
	<div class="row">
		<div class="col-12">
			<div class="my-5">
				{{> breadcrumb}}
			</div>
			<div class="ms-3 mb-3">
				<h1>{{header}}</h1>
			</div>

			<div class="row">
				{{#each sortBlock}}
					<div class="m-2 my-5 col-3">
					<select class="form-select" aria-label="Default select example">
					<option selected>{{placeholder}}</option>
					{{#each options}}
					<option value="{{value}}">{{text}}</option>
					{{/each}}
					</select>
					</div>
				{{/each}}
			</div>
		</div>
	</div>


	<div class="row">
		<div class="col-4">
			<div class="ms-1">
				{{#with filterBlock}}
				<div class="card">
					<div class="p-2">
						{{#with sellers}}
							<p>{{title}}</p>
							{{#each list}}
							<div class="form-check">
  							<input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
								<label class="form-check-label" for="flexCheckDefault">{{value}}</label>
							</div>
							{{/each}}
						{{/with}}

						<hr>

						{{#with brands}}
						<p>{{title}}</p>
						{{#with input}}
						<input class="form-control" type="text" placeholder="{{placeholder}}" aria-label="default input example">
						{{/with}}
						{{#each options}}
						<div class="form-check">
							<input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
							<label class="form-check-label" for="flexCheckDefault">{{value}}</label>
						</div>
						{{/each}}
						{{/with}}	

						<hr>

						{{#with price}}	
						<p>{{title}}</p>
						{{#with range}}
						<div class="mb-2">
						<input class="form-control" type="text" placeholder="{{from}}" aria-label="default input example">
						</div>
						<div class="mb-2">
						<input class="form-control" type="text" placeholder="{{to}}" aria-label="default input example">
						</div>
						{{/with}}
						{{#with button}}
						<div class="mb-2">
							<a href="{{link}}" class="btn btn-outline-secondary">{{text}}</a>
						</div>
						{{/with}}
						{{/with}}	

						<hr>

						{{#each filterList}}
						<p>{{title}}</p>
						{{#each options}}
						<div class="form-check">
  							<input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
								<label class="form-check-label" for="flexCheckDefault">{{value}}</label>
						</div>
						{{/each}}
						<hr>
						{{/each}}		
					</div>
				</div>
				{{/with}}
			</div>
		</div>

		<div class="col-8">
			<div class="row">
				{{#each goodsList}}
				{{> catalogItem}}
				{{/each}}
			</div>
		</div>
		<div class="my-5">
		{{> shopaction}}
		</div>	
		<hr>
	</div>
</main>


